---
import { Image } from 'astro:assets';

interface Props {
  src: ImageMetadata;
  alt: string;
}

const { src, alt } = Astro.props;
---

<div class="relative w-full pt-[56.25%] my-8 rounded-xl overflow-hidden shadow-lg">
  <Image 
    src={src} 
    alt={alt}
    class="absolute inset-0 w-full h-full object-cover"
    width={1200}
    height={675}
    quality={80}
  />
</div> 