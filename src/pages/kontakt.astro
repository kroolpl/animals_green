---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import ArrowRight from 'astro-heroicons/outline/ArrowRight.astro';
import Phone from 'astro-heroicons/outline/Phone.astro';
import contactImage from '../assets/images/contact.svg';

const contactMethods = [
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>`,
    title: 'Zadzwoń do nas',
    description: 'Od poniedziałku do soboty, 9:00 - 18:00',
    contact: '+48 123 456 789',
    action: 'tel:+48123456789'
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>`,
    title: 'Napisz do nas',
    description: 'Odpowiadamy w ciągu 24 godzin',
    contact: 'kontakt@petfoodstore.pl',
    action: 'mailto:kontakt@petfoodstore.pl'
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>`,
    title: 'Odwiedź nas',
    description: 'Stare Miasto, Głogów',
    contact: 'ul. Przykładowa 123, 00-000 Głogów',
    action: 'https://maps.google.com'
  }
];
---

<Layout title="Kontakt">
  <!-- Hero Section -->
  <section 
    class="relative py-24 lg:py-32 overflow-hidden" 
    data-animate="fade-in"
  >
    <!-- Background Pattern -->
    <div class="absolute inset-0 -z-30 bg-[radial-gradient(#4D7C0F_0.5px,transparent_0.5px)] [background-size:16px_16px] opacity-[0.15]"></div>

    <!-- Animated Shapes -->
    <div class="absolute inset-0 -z-20 overflow-hidden">
      <div class="absolute top-1/4 right-1/3 w-[500px] h-[500px] bg-gradient-to-br from-primary/20 to-secondary/20 rounded-full blur-3xl motion-safe:animate-float-slow"></div>
      <div class="absolute -bottom-1/4 -left-1/4 w-[500px] h-[500px] bg-gradient-to-br from-secondary/20 to-primary/20 rounded-full blur-3xl motion-safe:animate-float"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <!-- Left Column -->
        <div class="max-w-2xl">
          <div 
            class="inline-flex items-center space-x-2 px-4 py-2 rounded-full bg-primary/5 mb-8" 
            data-animate="fade-down"
          >
            <Phone class="w-5 h-5 text-primary" />
            <span class="text-sm font-medium text-primary">Skontaktuj się z nami</span>
          </div>
          
          <h1 class="font-display text-4xl lg:text-5xl font-bold tracking-tight text-gray-900 leading-[1.15] mb-6">
            <span class="block" data-animate="fade-right">
              Jesteśmy tu
            </span>
            <span class="relative block mt-2" data-animate="fade-right" style="--animate-delay: 0.2s">
              <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent italic">
                dla Ciebie
              </span>
            </span>
          </h1>

          <p 
            class="text-xl text-gray-600 leading-relaxed mb-8" 
            data-animate="fade-right"
            style="--animate-delay: 0.3s"
          >
            Masz pytania? Chętnie na nie odpowiemy. Wybierz najwygodniejszą dla siebie formę kontaktu.
          </p>
        </div>

        <!-- Right Column - Hero Image -->
        <div 
          class="relative lg:block"
          data-animate="fade-left"
          style="--animate-delay: 0.3s"
        >
          <div class="absolute inset-0 bg-gradient-to-br from-primary/10 to-secondary/10 rounded-2xl blur-2xl"></div>
          <div class="relative">
            <Image 
              src={contactImage} 
              alt="Skontaktuj się z nami"
              class="w-full h-auto transform hover:scale-102 transition-transform duration-500 max-w-sm mx-auto lg:max-w-none"
              width={600}
              height={500}
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Methods Section -->
  <section class="relative py-16 bg-neutral">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Contact Methods Grid -->
      <div class="grid md:grid-cols-3 gap-8 mb-20">
        {contactMethods.map((method, index) => (
          <a 
            href={method.action}
            class="group relative bg-white/50 backdrop-blur-sm p-8 rounded-2xl hover:bg-white transition-all duration-300 hover:shadow-lg"
            data-animate="fade-up"
            style={`--animate-delay: ${0.1 + index * 0.1}s`}
          >
            <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-secondary/5 rounded-2xl -z-10"></div>
            <div class="flex flex-col items-start">
              <div class="w-12 h-12 rounded-xl bg-primary/10 text-primary flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
                <div set:html={method.icon} />
              </div>
              <h3 class="font-display text-xl font-semibold text-gray-900 mb-2 tracking-tight">
                {method.title}
              </h3>
              <p class="text-gray-600 text-sm leading-relaxed mb-4">
                {method.description}
              </p>
              <p class="text-primary font-medium tracking-wide group-hover:translate-x-1 transition-transform duration-300">
                {method.contact}
              </p>
            </div>
          </a>
        ))}
      </div>

      <!-- Contact Form & Map Section -->
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <!-- Contact Form -->
        <div 
          class="bg-white/50 backdrop-blur-sm p-8 rounded-2xl shadow-lg"
          data-animate="fade-right"
        >
          <h2 class="font-display text-2xl font-bold text-gray-900 mb-6">
            Formularz kontaktowy
          </h2>
          <form 
            x-data="{ isSubmitting: false }"
            class="space-y-6"
          >
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Imię</label>
                <input 
                  type="text" 
                  class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-colors"
                  required
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                <input 
                  type="email" 
                  class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-colors"
                  required
                />
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Wiadomość</label>
              <textarea 
                rows="4" 
                class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-2 focus:ring-primary/20 focus:border-primary transition-colors resize-none"
                required
              ></textarea>
            </div>
            <button
              type="submit"
              class="w-full inline-flex items-center justify-center px-8 py-3 font-medium rounded-xl text-white bg-primary hover:bg-primary-dark transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed"
              :disabled="isSubmitting"
            >
              <span x-show="!isSubmitting">Wylij wiadomość</span>
              <span x-show="isSubmitting" class="flex items-center">
                <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Wysyłanie...
              </span>
            </button>
          </form>
        </div>

        <!-- Map -->
        <div 
          class="h-[500px] bg-white/50 backdrop-blur-sm rounded-2xl overflow-hidden shadow-lg"
          data-animate="fade-left"
          style="--animate-delay: 0.2s"
        >
          <div id="map" class="w-full h-full"></div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<!-- Import Leaflet CSS -->
<link 
  rel="stylesheet" 
  href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
  integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
  crossorigin=""
/>

<!-- Import Leaflet JS -->
<script 
  src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
  integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
  crossorigin=""
></script>

<script>
  import { setupAnimationObserver } from '../utils/animate-on-scroll';
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      setupAnimationObserver();
      initMap();
    });
  } else {
    setupAnimationObserver();
    initMap();
  }

  function initMap() {
    const lat = 51.6674;
    const lng = 16.0847;
    
    const map = L.map('map', {
      center: [lat, lng],
      zoom: 14,
      scrollWheelZoom: false
    });

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      maxZoom: 19,
      attribution: '© OpenStreetMap contributors'
    }).addTo(map);

    const icon = L.divIcon({
      html: `
        <div class="p-2 bg-primary text-white rounded-full shadow-lg">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          </svg>
        </div>
      `,
      className: 'custom-marker',
      iconSize: [40, 40],
      iconAnchor: [20, 40]
    });

    const marker = L.marker([lat, lng], { icon }).addTo(map);

    marker.bindPopup(`
      <div class="p-3">
        <h3 class="font-display font-bold mb-1">PetFood Store</h3>
        <p class="text-sm text-gray-600">ul. Przykładowa 123<br>00-000 Głogów</p>
      </div>
    `);
  }
</script>

<style>
  .custom-marker {
    background: none;
    border: none;
  }

  :global(.leaflet-popup-content-wrapper) {
    border-radius: 1rem;
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1);
  }

  :global(.leaflet-popup-tip-container) {
    display: none;
  }
</style> 