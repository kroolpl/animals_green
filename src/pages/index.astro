                    />
                  </div>
                  <div>
                    <h3 class="font-display font-bold text-gray-900">
                      {testimonial.name}
                    </h3>
                    <p class="text-sm text-gray-600">
                      {testimonial.type}
                    </p>
                  </div>
                </div>

                <div class="mb-4">
                  {/* Rating Stars */}
